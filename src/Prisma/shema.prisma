datasource db {
  provider = "mongodb"
  url      = env("databaseLink")
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  username     String @unique
  email        String @unique
  password     String
  profileImage String
  joinedAt     String
  Todo         Todo[]
}

model Todo {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  Owner     User    @relation(fields: [OwnerId], references: [id])
  OwnerId   String  @db.ObjectId
  createdAt String
  Title     String
  Body      String
  Completed Boolean @default(false)
}
